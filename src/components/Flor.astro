---
interface Props {
    positionY: Number;
}

const { positionY } = Astro.props;
---
<div
class="h-52 mb-8 mt-12"
>
<div class="rama" style={`top: ${positionY}%`}>
    <div class="punta"></div>
    <div class="hojaIzquierda"></div>
    <div class="hojaDerecha"></div>
    <div class="espinaIzquierda1"></div>
    <div class="espinaDerecha"></div>
    <div class="espinaIzquierda2"></div>

    <div class="petaloCentral">
        <div class="petalo1"></div>
        <div class="petalo2"></div>
        <div class="petalo3"></div>
        <div class="petalo4"></div>
        <div class="petalo5"></div>
        <div class="petalo6"></div>
    </div>
</div>
</div>


<style>
    .contenedor-flor {
        position: relative;
        width: 100%;
        text-align: center;
    }

    .texto-invitacion {
        margin-top: 400px; /* Ajusta este valor seg√∫n sea necesario */
    }

    .petaloCentral {
        position: absolute;
        width: 85px;
        height: 120px;
        transition: all 0.5s ease-out;
        border-radius: 15px;
        box-shadow: 0px 0px 60px rgba(245, 148, 184, 1);
        transform: translate(-40%, -90%);
        background: #d52d58;
    }

    .petalo4,
    .petalo5,
    .petalo6 {
        left: 300px;
        border-radius: 50px 0px 50px 0px;
        transform-origin: bottom left;
    }

    .petalo1 {
        left: -35%;
        top: -6%;
        border-radius: 0px 50px 0px 50px;
        transform-origin: bottom right;
        position: absolute;
        width: 85px;
        height: 130px;
        transition: all 0.5s ease-out;
        z-index: 5;
        background: #ab1a3f;
        box-shadow: 0px 0px 60px rgba(245, 148, 184, 0.5);
        animation:
            bloom2 3s ease-in-out,
            glowing 2.5s ease-in-out infinite;
        animation-fill-mode: forwards;
    }

    .petalo2 {
        left: -35%;
        top: -6%;
        border-radius: 0px 50px 0px 50px;
        transform-origin: bottom right;
        position: absolute;
        width: 85px;
        transition: all 0.5s ease-out;
        z-index: 3;
        background: #b81b43;
        height: 135px;
        box-shadow: 0px 0px 60px rgba(245, 148, 184, 0.5);
        animation:
            bloom4 3s ease-in-out,
            glowing 2.5s ease-in-out infinite;
        animation-fill-mode: forwards;
    }

    .petalo3 {
        left: -35%;
        top: -6%;
        border-radius: 0px 50px 0px 50px;
        transform-origin: bottom right;
        position: absolute;
        width: 85px;
        transition: all 0.5s ease-out;
        z-index: 1;
        background: #c9204b;
        height: 130px;
        box-shadow: 0px 0px 60px rgba(245, 148, 184, 0.3);
        animation:
            bloom6 3s ease-in-out,
            glowing 2.5s ease-in-out infinite;
        animation-fill-mode: forwards;
    }

    .petalo4 {
        left: 35%;
        top: -6%;
        position: absolute;
        width: 85px;
        transition: all 0.5s ease-out;
        z-index: 0;
        background: #c9204b;
        height: 130px;
        box-shadow: 0px 0px 60px rgba(245, 148, 184, 0.3);
        animation:
            bloom7 3s ease-in-out,
            glowing 2.5s ease-in-out infinite;
        animation-fill-mode: forwards;
    }

    .petalo5 {
        left: 35%;
        top: -6%;
        position: absolute;
        width: 85px;
        transition: all 0.5s ease-out;
        z-index: 2;
        background: #b81b43;
        height: 135px;
        box-shadow: 0px 0px 60px rgba(245, 148, 184, 0.5);
        animation:
            bloom5 3s ease-in-out,
            glowing 2.5s ease-in-out infinite;
        animation-fill-mode: forwards;
    }

    .petalo6 {
        left: 35%;
        top: -6%;
        position: absolute;
        width: 85px;
        height: 120px;
        transition: all 0.5s ease-out;
        z-index: 4;
        background: #ab1a3f;
        box-shadow: 0px 0px 60px rgba(245, 148, 184, 0.5);
        animation:
            bloom3 3s ease-in-out,
            glowing 2.5s ease-in-out infinite;
        animation-fill-mode: forwards;
    }

    .punta {
        position: absolute;
        z-index: -1;
        width: 55px;
        height: 30px;
        background: #338f37;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 100px;
    }

    .rama {
        position: absolute;
        width: 15px;
        height: 300px;
        background: #054c05;
        top: 70%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 0 0 100px 100px;
    }

    .hojaIzquierda {
        position: absolute;
        width: 60px;
        height: 100px;
        border-radius: 10px 80px 40px 80px;
        background: #054c05;
        transform-origin: bottom;
        transform: rotate(-30deg) translateX(-100%);
        top: 30%;
        left: 50%;
        box-shadow: inset 10px 10px #066406;
    }

    .hojaDerecha {
        position: absolute;
        width: 60px;
        height: 100px;
        border-radius: 80px 1px 80px 40px;
        background: #054c05;
        transform-origin: bottom;
        transform: rotate(30deg);
        top: 20%;
        left: 0%;
        box-shadow: inset -10px 10px #066406;
    }

    .espinaDerecha {
        position: absolute;
        border-top: 15px solid transparent;
        border-bottom: 15px solid transparent;
        border-left: 15px solid #054c05;
        left: -5%;
        top: 45%;
        transform: translate(100%, 100%);
    }

    .espinaIzquierda1 {
        position: absolute;
        border-top: 15px solid transparent;
        border-bottom: 15px solid transparent;
        border-right: 15px solid #054c05;
        right: 190%;
        top: 5%;
        transform: translate(100%, 100%);
    }

    .espinaIzquierda2 {
        position: absolute;
        border-top: 15px solid transparent;
        border-bottom: 15px solid transparent;
        border-right: 15px solid #054c05;
        right: 190%;
        top: 70%;
        transform: translate(100%, 100%);
    }

    @keyframes bloom2 {
        100% {
            transform: rotate(-45deg);
        }
    }

    @keyframes bloom3 {
        100% {
            transform: rotate(50deg);
        }
    }

    @keyframes bloom4 {
        100% {
            transform: rotate(-25deg);
        }
    }

    @keyframes bloom5 {
        100% {
            transform: rotate(25deg);
        }
    }

    @keyframes bloom6 {
        100% {
            transform: rotate(-10deg);
        }
    }

    @keyframes bloom7 {
        100% {
            transform: rotate(10deg);
        }
    }

    @keyframes glowing {
        50% {
            background: #d7365f;
            box-shadow: 0px 0px 60px rgba(245, 148, 184, 1);
        }
    }

    @keyframes falling {
        20% {
            background: #9d193b;
            box-shadow: 0px 0px 0px rgba(245, 148, 184, 0);
        }

        100% {
            opacity: 0;
        }
    }
</style>
