---
interface Props {
  texto: string;
  botonTexto: string;
}

const { texto, botonTexto } = Astro.props;

---

<div class="flex flex-col items-center gap-4 mb-6">
  <slot name="icon"/>
  <p class="text-blue-900 text-center text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-outline font-bold">{texto}</p>
  <a class="bg-blue-500 hover:bg-blue-700 text-2xl text-center text-white font-bold py-2 px-4 rounded-full">
    {botonTexto}
  </a>
</div>

<style>
.text-outline {
  text-shadow: -1px -1px 0 #fff, 1px -1px 0 #fff, -1px 1px 0 #fff, 1px 1px 0 #fff;
}
</style>